<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="lobbyPane" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8" fx:controller="com.lucwo.fourcharm.presenter.lobby.LobbyPresenter">
   <bottom>
      <HBox prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="chatField" promptText="Enter chat message" HBox.hgrow="ALWAYS"/>
            <Button fx:id="sendButton" mnemonicParsing="false" onAction="#sendMessage" text="Send"/>
         </children>
      </HBox>
   </bottom>
   <right>
      <ScrollPane fitToWidth="true" BorderPane.alignment="CENTER">
         <content>
            <TextArea fx:id="messageArea" editable="false" prefHeight="200.0"/>
         </content>
      </ScrollPane>
   </right>
   <center>
      <VBox fx:id="gameArea" maxHeight="Infinity" maxWidth="Infinity" prefHeight="200.0" prefWidth="100.0"
            BorderPane.alignment="CENTER"/>
   </center>
</BorderPane>
