<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity"
          minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="500.0"
          xmlns="http://javafx.com/javafx/8" fx:controller="com.lucwo.fourcharm.presenter.game.NewGamePresenter">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints minHeight="10.0" prefHeight="300.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="300.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="300.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <ChoiceBox fx:id="p1Select" prefWidth="150.0" GridPane.halignment="LEFT" GridPane.rowIndex="2"/>
        <ChoiceBox fx:id="p2Select" prefWidth="150.0" GridPane.columnIndex="1" GridPane.halignment="LEFT"
                   GridPane.rowIndex="2"/>
        <Label text="Player 1" GridPane.halignment="CENTER" GridPane.rowIndex="1"/>
        <Label text="Player 2" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1"/>
        <Button fx:id="playButton" mnemonicParsing="false" text="Play" GridPane.halignment="CENTER"
                GridPane.rowIndex="3" onMouseClicked="#startNewGame"/>
    </children>
</GridPane>
